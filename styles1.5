/* ================================= 
  Base Styles
==================================== */

* {
	box-sizing: border-box;
	margin: 0;
}

body {
	font-family: 'Varela Round', sans-serif;
	line-height: 1.6;
	color: #3a3a3a;
}

html,
body {
	height: 100%;
}

p {
	font-size: .95em;
	margin-bottom: 1.5em;
}

h2,
a {
	color: #000;
}

a {
	text-decoration: none;
}

/* ================================= 
  Base Layout Styles
==================================== */

/* ---- Navigation ---- */

.name {
	font-size: 150%;
  font-weight: bolder;
	text-align: left;
	font-color: #000;
	margin-top: 6px;
	margin-bottom: 6px;
	padding-left: 1em;
}

.main-nav ul {
	display: inline-table;
  list-style-type: none;
  margin: 0;
  padding: 0;
  overflow: hidden;
  background-color: #333;
}

.main-nav li a {
  font-weight: bold;
  display: inline-block;
  color: black;
  padding: 14px 16px;
  box-shadow: 5px 5px 3px 3px;
  border-radius: 1em;
}

.main-nav li a:hover {
	border-radius: 1em;
  background-color: silver;
  opacity: 0.6;
}

.selected {
	border-radius: 1em;
  background-color: silver;
  opacity: 0.6;
}

/* ---- Layout Containers ---- */

.content {
  padding: 1em 1em;
  position: relative;
  background: rgba(190, 180, 170, .9);
  border-radius: 25px;
}

.contact {
  background: rgba(190, 180, 170, .9);
  border-radius: 25px;
	text-align: center;
	padding-top: -1.5em;
}

.contact p {
  padding-top: 1em;
  font-weight: bolder;
}

.main-header {
	text-align: center;
	padding-top: 1.5em;
	padding-bottom: 1.5em;
	background: rgba(190, 180, 170, 0.8);
}

.main-footer {
  clear: both;
	text-align: center;
	padding: 2em 0;
	background: rgba(190, 180, 170, 0.8);
	width: 100%;
}

.social-icon {
  width: 20px;
	height: 20px;
 	margin: 0 5px;
}

/* ---- Sticky Footer ---- */


.wrap {
	min-height: 100%;
	margin: 0 auto;
  background: url("edison-house.jpg") no-repeat;
  background-size: 100% ;
}

.main-footer, .push {
	height: 4em;
}

/* ================================= 
  Image Gallery
==================================== */



.feat-img {
    width: 50%;
    float: left;
    margin-top: 5px;
    margin-right: 25px;
    margin-bottom: 25px;
    padding: 10px;
    border: solid 1px #d9e4ea;
    position: relative;
    border-radius: 25px;
  }


/* ---- Image Link To Menu.html ---- */

#menu-link {
  position:relative;
}

#anchor {
  width:640px;
  height:480px;
  overflow:hidden;
  text-indent:-9999px; 
  top:0;
  left:0;
  background:url("menu.html") no-repeat 640px 480px;
}

/* ---- Lightbox Style ---- */


#overlay {
  color: #fff;
  display:none;
  background: rgba(0,0,0, 0.7);
  width: 100%;
  height:100%;
  position:absolute;
  top: 0;
  left: 0;
  text-align: center;
  
}
#overlay img {
  margin-top: 10%;
}
#overlay button {
  border: none;
  background-color: #silver;
  color: #000;
  border-radius: 5px;
  padding: 10px 20px;
  margin-right: 5px;
  font-weight: bold;
  cursor: pointer;
  outline: none;

}

/* ---- Lightbox Zoom ---- */




/* ================================= 
  Message Board-Comments/Questions
==================================== */

#form {
    margin-left: auto;
    margin-right: auto;
    max-width: 500px;
    background: #555;
    padding: 20px 30px 20px 30px;
    font: 12px "Varela Round", Helvetica, Arial, sans-serif;
    color: #D3D3D3;
    text-shadow: 1px 1px 1px #444;
    border: none;
    border-radius: 5px;
    text-align: auto;
}

#form h1 {
    padding: 0px 0px 10px 40px;
    display: block;
    border-bottom: 1px solid #444;
    margin: -10px -30px 30px -30px;
}

#form h1>span {
    display: block;
    font-size: 11px;
}

#form label {
    display: block;
    margin: 0px 0px 5px;
}

#form label>span {
    float: left;
    width: 20%;
    text-align: right;
    padding-right: 10px;
    margin-top: 10px;
    font-weight: bold;
}

#form input[type="text"],
 #form input[type="email"],
  #form textarea,
   #form select {
    border: none;
    color: #525252;
    height: 25px;
    line-height: 15px;
    margin: 2px 6px 16px;
    outline: 0 none;
    padding: 5px 0px 5px 5px;
    width: 70%;
    border-radius: 2px;
    box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
    background: #DFDFDF;
}

#form select {
    background: #DFDFDF;
    text-indent: 0.01px;
    overflow: '';
    width: 70%;
    height: 35px;
    color: #525252;
    line-height: 25px;
}

#form textarea{
    height: 100px;
    padding: 5px 0px 0px 5px;
    width: 70%;
}

#form .button {
    background: silver;
    border: none;
    padding: 10px 25px 10px 25px;
    color: #585858;
    border-radius: 4px;
    text-shadow: 1px 1px 1px #FFE477;
    font-weight: bold;
    box-shadow: 1px 1px 1px #3D3D3D;
}

#form .button:hover {
    color: #333;
    background-color: #EBEBEB;
}

/* ================================= 
  Media Queries
==================================== */


@media (max-width: 689px) {

  .main-footer {
    position: inline;
  }

	.push-mobile {
		height: 3em;
	}


}

@media (min-width: 689px) {

  header {
    margin-bottom: 1em;
  }

  footer {
    margin-top: -1em;
  }

  .main-footer {
    padding-bottom: -3em;
  }

  .push {
    padding-bottom: 2em;
  }
 
	.content {
		width: 75%;
		max-width: 1150px;
		margin: 0 auto;
	}

	.main-nav {
		float: right;
	}

	.name,
	.main-nav li {
		float: left;
	}

	.main-nav li {
		margin-left: 12px;
		padding-right: 1em;
	}

	
	/* ---- Columns ---- */

	.secondary {
		float: right;
		padding-left: 1em;
		padding-right: 2em;
		width: 55%;
	}

	.primary {
		float: left;
		padding-left: 2em;
		padding-right: 1em;
		width:40%; 
	}

	.clearfix::after {
		content: "";
		display: table;
		clear: both;
	}

}




