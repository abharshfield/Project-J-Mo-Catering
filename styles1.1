/* ================================= 
  Base Styles
==================================== */

* {
	box-sizing: border-box;
}

body {
	font-family: 'Varela Round', sans-serif;
	line-height: 1.6;
	color: #3a3a3a;
}

p {
	font-size: .95em;
	margin-bottom: 1.5em;
}

h2,
h3,
a {
	color: #093a58;
}

h2,
h3 {
	margin-top: 0;
}


a {
	text-decoration: none;
}

	/* ---- Sticky Footer ---- */

* {
	margin: 0;
}	

html, body {
	height: 100%;
}

.wrap {
	min-height: 100%;
	height: auto !important;
	height: 100%;
	margin: 0 auto -4em;
}

.main-footer, .push {
	height: 4em;
	
}

/* ================================= 
  Base Layout Styles
==================================== */

/* ---- Navigation ---- */

.name {
	font-size: 1.25em;
}

.name,
.main-nav li {
	text-align: center;
	font-color: #000;
	background: #d3d3d3;
	margin-top: 6px;
	margin-bottom: 6px;
}



.name a,
.main-nav a {
	padding: 10px 15px;
	text-align: center;
	display: block;
}

.main-nav a {
	font-size: .95em;
	color: #800020;
	text-transform: uppercase;
}

.main-nav a:hover {
	color: #093a58;
}

/* ---- Layout Containers ---- */

.content {
	padding-left: 1em;
	padding-right: 1em;
}

.contact {
	text-align: center;
	padding-top: -1.5em;
}

.main-header {
	padding-top: 1.5em;
	padding-bottom: 1.5em;
	background: #d3d3d3;
	margin-bottom: 30px;
}

.main-footer {
	text-align: center;
	padding: 2em 0;
	background: #FFCCCB;
}

.social-icon {
  	width: 20px;
	height: 20px;
 	margin: 0 5px;
}

/* ================================= 
  Forms
==================================== */

form {
	margin-bottom: 60px;
}

h4 {
	text-align: center;
	font-size: 26px;
	text-decoration: underline;
	color: #D0F8FF;
    text-shadow: 0 0 5px #222, 0 0 10px #222,
             0 0 20px #222, 0 0 30px #222,
             0 0 40px #222;
}

/*------Form Fields-------- */

input,
textarea {
  font-size: 1em;
  color: #222;
  font-weight: 300; 
  width: 100%;
  border: none;
  height: auto;
  padding: 15px;
  outline: 0;
  margin-bottom: 1.2em;
  border-radius: .3em;
  border-bottom: 3px solid rgba(0,0,0, 0.05);
  background-color: #e8eeef;
  box-shadow: 0 1px 0 rgba(0,0,0,0.03) inset;
}

label {
  display: block;
  margin-bottom: 0.5em; 
}

/*------Attribute Selectors------ */

.form-contact {
  padding: 20px 24px;
  background: #f4f8f9;
}

#form {
  max-width: 500px;
  margin: auto;
}

input[type="email"],
input[type="phone"] {
  background: #fdfee6;
}

.btn {
  cursor: pointer;
  font-size: .875em;
  font-weight: 400;
  color: #fff;
  padding-left: 20px;
  padding-right: 20px;
  text-transform: uppercase;
}

.btn:hover {
	opacity: .75;
}

.default {
	background-color: #52bab3;
}

.error {
	background-color: #ff784f;
}

/* ================================= 
  Media Queries
==================================== */

@media (min-width: 789px) {
 
	.content {
		width: 85%;
		max-width: 1150px;
		margin: 0 auto;
	}

	.main-nav {
		float: right;
	}

	.name,
	.main-nav li {
		float: left;
	}

	.main-nav li {
		margin-left: 12px;
	}

	
	/* ---- Columns ---- */

	.secondary {
		float: right;
		padding-left: 1em;
		padding-right: 1em;
		width: 50%;
	}

	.primary {
		float: left;
		padding-left: 1em;
		padding-right: 1em;
		width:50%; 
	}

	/*-----Images------- */

	.feat-img {
		width: 300px;
		float: left;
		margin-top: 5px;
		margin-right: 25px;
		margin-bottom: 25px;
		padding: 10px;
		border: solid 1px #d9e4ea;
	}

	.clearfix::after {
		content: "";
		display: table;
		clear: both;
	}

}



