/* ================================= 
  Base Styles
==================================== */

* {
	box-sizing: border-box;
	margin: 0;
}

body {
	font-family: 'Varela Round', sans-serif;
	line-height: 1.6;
	color: #3a3a3a;
}

html,
body {
	height: 100%;
}

p {
	font-size: .95em;
	margin-bottom: 1.5em;
}

h2,
a {
	color: #000;
}

a {
	text-decoration: none;
}

/* ================================= 
  Base Layout Styles
==================================== */

/* ---- Navigation ---- */

.name {
	font-size: 150%;
	text-align: left;
	font-color: #000;
	background: #C0C0C0;
	margin-top: 6px;
	margin-bottom: 6px;
	padding-left: 1em;
}

.main-nav ul {
	display: inline-table;
  list-style-type: none;
  margin: 0;
  padding: 0;
  overflow: hidden;
  background-color: #333;
}

.main-nav li a {
  display: inline-block;
  color: #fff;
  padding: 14px 16px;
  box-shadow: 5px 5px 3px 3px;
  border-radius: 1em;
}

.main-nav li a:hover {
	border-radius: 1em;
  background-color: #111;
  opacity: 0.6;
}

.selected {
	border-radius: 1em;
  background-color: #111;
  opacity: 0.6;
}

/* ---- Layout Containers ---- */

.content {
	padding-left: 1em;
	padding-right: 1em;
}

.contact {
	text-align: center;
	padding-top: -1.5em;
}

.main-header {
	text-align: center;
	padding-top: 1.5em;
	padding-bottom: 1.5em;
	background: #C0C0C0;
	margin-bottom: 30px;
}

.main-footer {
  clear: both;
  
	text-align: center;
	padding: 2em 0;
	background: #C0C0C0;
	width: 100%;

}

.social-icon {
  width: 20px;
	height: 20px;
 	margin: 0 5px;
}

/* ---- Sticky Footer ---- */


.wrap {
	min-height: 100%;
	height: 100%;
	margin: 0 auto -4em;
}

.main-footer, .push {
	height: 4em;
}

